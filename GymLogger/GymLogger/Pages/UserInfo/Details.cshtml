@page
@model GymLogger.Pages.User.DetailsModel
@{
    ViewData["Title"] = "User Profile";
}

<h2>User Profile</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Input.UserName"></label>
        <input asp-for="Input.UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Input.Height"></label>
        <input asp-for="Input.Height" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Input.Weight"></label>
        <input asp-for="Input.Weight" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Input.BirthDate"></label>
        <input asp-for="Input.BirthDate"
               class="form-control"
               value="@Model.Input.BirthDate?.ToString("dd.MM.yyyy")" />
    </div>

    <button type="submit" class="btn btn-success">Change and save</button>
</form>

<hr />

<h3>Change Login</h3>
<a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="btn btn-warning">Change Password</a>
<a asp-area="Identity" asp-page="/Account/Manage/ChangeEmail" class="btn btn-warning">Change Email</a>

<hr />

<h3>Download or Upload Training Data</h3>
<a asp-page="/UserInfo/Details" asp-page-handler="DownloadCsv" class="btn btn-primary">Download CSV</a>

<form method="post" enctype="multipart/form-data" asp-page-handler="UploadCsv" class="mt-2">
    <input type="file" name="csvFile" accept=".csv" class="form-control-file" />
    <button type="submit" class="btn btn-secondary mt-2">Upload CSV</button>
</form>
